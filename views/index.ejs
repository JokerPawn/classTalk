
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="./favicon.ico">

    <title>classTalk index</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/jumbotron.css" rel="stylesheet">

    <style type='text/css'>
        .oneTalk{
            height: 200px;
        }
        .avatar{
            border-radius: 50%;
        }
        #allTalk{
            height: 500px;
        }

    </style>
</head>

<body>

<% include header.ejs %>
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <% if (!login) { %>
    <!--非登陆界面-->
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1>欢迎！</h1>
                <p>班级说说是我们交流的园地，欢迎注册！</p>
                <p><a class="btn btn-primary btn-lg" href="/regist" role="button">注册</a></p>
            </div>
        </div>
        <div class="col-lg-6">
            <form>
                <div class="form-group">
                    <label for="username">用户名</label>
                    <input type="email" class="form-control" id="username" placeholder="请输入用户名">
                </div>
                <div class="form-group">
                    <label for="password">密码</label>
                    <input type="password" class="form-control" id="password" placeholder="至少六位密码">
                </div>
                <p><a class="btn btn-success" href="/login" role="button" id='login'>登陆</a></p>
            </form>
        </div>
        <div class="alert alert-danger" role="alert" style='display: none;'></div>
    </div>
    <% } else { %>
    <!--登陆后的界面-->
    <div class='container'>
        <div class="row">
            <div class="col-lg-1">
                <a href="/setAvatar">
                    <img class='avatar' src="/avatar/<%= avatar%>" alt="">
                </a>
            </div>
            <div class="col-lg-6 col-lg-offset-1">
                <p><%= username%></p>
                <textarea name="content" id="content" cols="80" rows="4"></textarea>
                <button class='btn btn-success' id='publish' > 发表说说</button>
            </div>
        </div>
    </div>
    <% } %>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <!--分页条-->
        <nav aria-label="...">
            <ul class="pagination">

            </ul>
        </nav>


        <div id="allTalk">

        </div>


    </div>

    <hr>

    <footer>
        <p>&copy; 2018 Company, Inc.</p>
    </footer>

</div> <!-- /container -->

<script type='text/template' id='template'>
    <div class="col-md-4 oneTalk">
        <h2>
            <img class='avatar' src="/avatar/{{= avatar}}" alt="">{{= username}}说：
        </h2>
        <p>{{= content}}</p>
        <p>{{= datetime}}</p><p><a class="btn btn-default" href="#" role="button">个人首页</a></p>
    </div>
</script>

<script type='text/javascript'>
    //分页条的ajax
    $.get('/getAllTalkAmount', function (result) {
        var amount = parseInt(result);
        var pageAmount = Math.ceil(amount / 9);
        for (var i = 0; i < pageAmount.length; i++) {
            $('.pagination').append('<li><a href="javascript:void(0);">'+ i +'</a></li>');
            $('.pagination li:first').addClass('active');
            $('.pagination li').click(function () {
                var page = $(this).index();
                getPage(page);
                $(this).addClass('active').siblings().removeClass('active');
            });
        }
    });

    //获取本页说说，并填充模板
    var compiled = _.template($('#template').html());
    getPage(0);
    function getPage(page) {
        $('#allTalk').html('');
        $.get('/getAllTalk?page=' + page, function (result) {
            iterator(0);
            function iterator(i) {
                if (i == result.length) {
                    return;
                }
                $.get('/getUserInfo?username=' + result[i].username, function (result2) {
                    result[i].avatar = result2.avatar;
                    var template = compiled(result[i]);
                    $('#allTalk').append($(template));
                });
                iterator(i + 1);
            }
        });
    }

    //文本框获取焦点后，警告框错误提示消失
    $('input').focus(function () {
        $('.alert').fadeOut();
    });

    //登陆按钮登陆
    $('#login').click(function () {
        //ajax
        $.post('/doLogin', {
            username: $('#username').val(),
            password: $('#password').val()
        }, function (result) {
            if (result == '1') {
                window.location = '/';//登陆成功
            } else if (result == '-1') {
                $('.alert').fadeIn().html('密码错误');
            } else if (result == '-2') {
                $('.alert').fadeIn().html('用户名不存在');
            }
        });
    });

    //点击发表说说
    $('#publish').click(function () {
        //ajax提交表单
        $.post('/post', {
            content: $('#content').val()
        }, function (result) {
            if (result == '1') {
                window.location = '/';//发表成功
            } else {
                alert('服务器错误，请联系管理员，发布失败');
            }
        });
    });

</script>

<script src="/js/jquery-1.11.3.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src='/js/underscore-noflect.js'></script>
</body>
</html>
